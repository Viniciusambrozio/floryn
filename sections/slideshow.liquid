<style>
{% if section.settings.slideshow_height == "full" %} 
  #shopify-section-{{section.id}} .slideshow__image, #shopify-section-{{section.id}} .slideshow__link, #shopify-section-{{section.id}} .placeholder-background {
    position: relative;
 
  }
 #shopify-section-{{section.id}} .slideshow__video--background {position: absolute;}
  #shopify-section-{{section.id}} .slick-dots {display: none !important;}
  #shopify-section-{{section.id}} .slick-prev, #shopify-section-{{section.id}} .slick-next {display: none !important;}
  #shopify-section-{{section.id}} .slideshow__arrow {display: none !important;}
  #shopify-section-{{section.id}} .slideshow__controls {display: none !important;}
    @media only screen and (max-width:749px) {
    #shopify-section-{{section.id}} .imgsldover {
      font-size:2.13333em 
    }
    #shopify-section-{{section.id}} .imgsldover_sub {
      font-size:15px 
    }
  }
  {% endif %}
    /*===== START BORDER STYLE CSS =====*/
    {% if section.settings.heading_divider == 'none' %} 
  #shopify-section-{{section.id}} .slideshow-wrapper .border_width {border:none;}
  {% endif %}
  {% unless section.settings.heading_divider == 'none'%}
  #shopify-section-{{section.id}} .slideshow-wrapper .border_width {
    {% if section.settings.heading_divider == 'small' %}
    width:33.333%;
    border-top:3px solid {{settings.color_image_overlay_text}};
    display: inline-block;
    position: relative;
    top: 4px;
    {% elsif section.settings.heading_divider == 'full' %}
    width:100%;
    border-top:3px solid {{settings.color_image_overlay_text}};
    display: inline-block;
    margin-top: 14px;
    margin-bottom: 0px;
    {% endif %}
  }
  {% if section.settings.heading_divider == 'medium' %}  
  #shopify-section-{{section.id}} .slideshow-wrapper .border_width {
    width:{{ section.settings.title | size | times: 9 | plus: 60 }}px;
    border-top:3px solid {{settings.color_image_overlay_text}};
    display: inline-block;
    margin-top: 14px;
    margin-bottom: 0px;
  }
  {% endif %}
  {% endunless %}
  /*===== END BORDER STYLE CSS =====*/
</style>

<div data-section-id="{{ section.id }}" data-section-type="slideshow-section">
  {% if section.blocks.size > 0 %}
    <div id="SlideshowWrapper-{{ section.id }}" class="slideshow-wrapper" role="region" aria-label="slideshow" tabindex="-1">
      <div id="Slideshow-{{ section.id }}" class="slideshow slideshow--{{ section.settings.slideshow_height }}" data-autoplay="{{ section.settings.autoplay }}" data-speed="{{ section.settings.autoplay_speed }}" aria-live="polite">
        {% for block in section.blocks %}
          {%- assign is_background_video = false -%}
          {% if block.type == 'video' %}
            {% if block.settings.video_type == 'background' or block.settings.video_type =='background-chrome' %}
              {%- assign is_background_video = true -%}
            {% endif %}
          {% endif %}

          <div class="slideshow__slide slideshow__slide--{{ block.id }}{% if is_background_video %} slideshow__slide--background-video{% endif %}" {{ block.shopify_attributes }}>
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="slideshow__link">
            {% endif %}

            {% if block.type == 'video' %}
              {% if block.settings.video_url != blank %}
                <div class="video-loader"></div>
              {% endif %}
              {% unless block.settings.video_type == 'background' %}
                <button type="button" class="text-link slideshow__video-control slideshow__video-control--close" data-controls="SlideshowVideo-{{ block.id }}">
                  {% include 'icon-close' %}
                  <span class="icon__fallback-text">{{ 'sections.slideshow.close_video' | t }}</span>
                </button>
              {% endunless %}
              {% if block.settings.video_url != blank %}
                <div id="SlideshowVideo-{{ block.id }}" class="slideshow__video {% if is_background_video %}slideshow__video--background{% endif %} slideshow__video--{{ block.settings.video_type }}"
                  data-id="{{ block.settings.video_url.id }}"
                  data-type="{{ block.settings.video_url.type }}"
                  data-slideshow="Slideshow-{{ section.id }}"></div>
              {% endif %}
            {% endif %}

            {% if block.settings.image == blank and block.settings.image_mobile == blank %}
              <div class="slideshow__image js">
                <div class="placeholder-background">
                  {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                  {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              </div>
            {% else %}
                {% if section.settings.slideshow_height == "full" %}
                <div class="slideshow__image">
                  <!-- Desktop Image -->
                  {% if block.settings.image %}
                  <img class="lazyload{% unless forloop.first == true %} lazypreload{% endunless %} medium-up--show small--hide" 
                       data-src="{{ block.settings.image | img_url: '1500x2200' }}"
                       {% if forloop.first == true %}src="{{ block.settings.image | img_url: '300x300' }}"{% else %}src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="{% endif %}
                       alt="{{ block.settings.title | escape }}">
                  {% endif %}
                  
                  <!-- Mobile Image -->
                  {% if block.settings.image_mobile %}
                  <img class="lazyload{% unless forloop.first == true %} lazypreload{% endunless %} medium-up--hide small--show" 
                       data-src="{{ block.settings.image_mobile | img_url: '800x600' }}"
                       {% if forloop.first == true %}src="{{ block.settings.image_mobile | img_url: '300x300' }}"{% else %}src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="{% endif %}
                       alt="{{ block.settings.title | escape }}">
                  {% elsif block.settings.image %}
                  <!-- Fallback to desktop image if no mobile image -->
                  <img class="lazyload{% unless forloop.first == true %} lazypreload{% endunless %} medium-up--hide small--show" 
                       data-src="{{ block.settings.image | img_url: '800x600' }}"
                       {% if forloop.first == true %}src="{{ block.settings.image | img_url: '300x300' }}"{% else %}src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="{% endif %}
                       alt="{{ block.settings.title | escape }}">
                  {% endif %}
                </div>
                  {% else %}
              <!-- Desktop Background Image -->
              {% if block.settings.image %}
              <div class="slideshow__image box ratio-container lazyload{% unless forloop.first == true %} lazypreload{% endunless %} js medium-up--show small--hide"
                   data-bgset="{% include 'bgset', image: block.settings.image %}"
                   data-sizes="auto"
                   data-parent-fit="cover"
                   style="background-position: {{ block.settings.alignment }};{% if forloop.first == true %} background-image: url('{{ block.settings.image | img_url: '300x300' }}');{% endif %}">
              </div>
              {% endif %}
              
              <!-- Mobile Background Image -->
              {% if block.settings.image_mobile %}
              <div class="slideshow__image box ratio-container lazyload{% unless forloop.first == true %} lazypreload{% endunless %} js medium-up--hide small--show"
                   data-bgset="{% include 'bgset', image: block.settings.image_mobile %}"
                   data-sizes="auto"
                   data-parent-fit="cover"
                   style="background-position: {{ block.settings.alignment }};{% if forloop.first == true %} background-image: url('{{ block.settings.image_mobile | img_url: '300x300' }}');{% endif %}">
              </div>
              {% elsif block.settings.image %}
              <!-- Fallback to desktop image if no mobile image -->
              <div class="slideshow__image box ratio-container lazyload{% unless forloop.first == true %} lazypreload{% endunless %} js medium-up--hide small--show"
                   data-bgset="{% include 'bgset', image: block.settings.image %}"
                   data-sizes="auto"
                   data-parent-fit="cover"
                   style="background-position: {{ block.settings.alignment }};{% if forloop.first == true %} background-image: url('{{ block.settings.image | img_url: '300x300' }}');{% endif %}">
              </div>
              {% endif %}
                {% endif %}
            {% endif %}

            <noscript>
              <!-- Desktop Noscript -->
              {% if block.settings.image %}
              <div class="slideshow__image medium-up--show small--hide"{% if block.settings.image %} style="background-image: url('{{ block.settings.image | img_url: '1500x2200' }}'); background-position: {{ block.settings.alignment }};"{% endif %}>
              </div>
              {% endif %}
              
              <!-- Mobile Noscript -->
              {% if block.settings.image_mobile %}
              <div class="slideshow__image medium-up--hide small--show"{% if block.settings.image_mobile %} style="background-image: url('{{ block.settings.image_mobile | img_url: '800x600' }}'); background-position: {{ block.settings.alignment }};"{% endif %}>
              </div>
              {% elsif block.settings.image %}
              <!-- Fallback to desktop image if no mobile image -->
              <div class="slideshow__image medium-up--hide small--show"{% if block.settings.image %} style="background-image: url('{{ block.settings.image | img_url: '800x600' }}'); background-position: {{ block.settings.alignment }};"{% endif %}>
              </div>
              {% endif %}
              
              {% if block.settings.image == blank and block.settings.image_mobile == blank %}
                <div class="placeholder-background">
                  {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                  {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
            </noscript>
            <div class="slideshow__text-wrap{% if block.settings.title != blank or block.settings.subheading != blank %} slideshow__overlay{% endif %}">
              <div class="slideshow__text-content">
                <div class="page-width">
                  {% unless block.settings.title == blank %}
                    <h2 class="h1 mega-title slideshow__title imgsldover{% if settings.link != blank %} slideshow__title--has-link{% endif %}">
                      {{ block.settings.title | escape }}
                    </h2>
                    <div class="border_width"></div>
                  {% endunless %}
                  {% unless block.settings.subheading == blank %}
                    <span class="mega-subtitle slideshow__subtitle imgsldover_sub">{{ block.settings.subheading | escape }}</span>
                  {% endunless %}
                  {% unless block.settings.button_label == blank %}
                    <a href="{{ block.settings.link }}" class="btn slideshow__btn">
                      {{ block.settings.button_label | escape }}
                    </a>
                  {% endunless %}
                </div>
              </div>
            </div>

            {% if block.settings.link != blank %}
              </a>
            {% endif %}

            {% if block.type == 'video' %}
              {% unless block.settings.video_type == 'background' %}
                <button type="button" class="btn btn--tertiary slideshow__video-control slideshow__video-control--play" data-controls="SlideshowVideo-{{ block.id }}">
                  {% include 'icon-play' %}
                  <span class="slideshow__video-control-text">{{ 'sections.slideshow.play_video' | t }}</span>
                </button>
              {% endunless %}
            {% endif %}
          </div>
        {% endfor %}
      </div>




    </div>
  {% endif %}

  {% if section.blocks.size == 0 %}
    <div class="placeholder-noblocks">
      {{ 'homepage.onboarding.no_content' | t }}
    </div>
  {% endif %}
</div>

